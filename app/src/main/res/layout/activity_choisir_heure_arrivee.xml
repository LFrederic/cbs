<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choisir_heure_arrivee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/accueil"
    tools:context=".activities.RenseignerHeureArriveeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/custom_background_group"
        android:padding="20dp">

        <TextView
            android:id="@+id/titreRenseignerAdresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/titreRenseignerHeure"
            android:textSize="30sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:gravity="center">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/edtDatePicker"
                android:gravity="center"
                android:id="@+id/edtDatePicker"
                android:onClick="choisirDate"
                android:focusable="false"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/edtTimePicker"
                android:gravity="center"
                android:id="@+id/edtTimePicker"
                android:onClick="choisirHeure"
                android:focusable="false"
                android:layout_weight="1"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_border"
            android:id="@+id/btnValiderHeureArrivee"
            android:text="@string/btnValiderHeureArrivee"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:onClick="validerHeureArrivee"/>

    </LinearLayout>

</LinearLayout>

</RelativeLayout>








