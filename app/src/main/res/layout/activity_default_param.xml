<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cbs.cbs.actitivties.ParametreDefautActivity"
    android:background="@drawable/accueil">


    <TextView
        android:id="@+id/titreParametre"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titreParametre"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textDefaultNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textDefaultNumber" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context="com.example.cbs.cbs.actitivties.ParametreDefautActivity">
        android:background="@android:color/transparent">


        <Button
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact" />

        <TextView
            android:id="@+id/defaultNumDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/defaultAddrDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/defaultAddrDisplay" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="90pt"
        tools:context=".actitivties.RenseignerAdresseActivity" />

    <Button
        android:id="@+id/btnModifierAdresse"
        android:background="@drawable/custom_button_border"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnModifierAdresse" />
    <Button
        android:id="@+id/paramValidate"
        android:background="@drawable/custom_button_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/valider" />
</LinearLayout>
